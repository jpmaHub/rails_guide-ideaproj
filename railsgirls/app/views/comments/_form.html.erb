<%= form_with(model: comment, local: true) do |form| %>
<% if comment.errors.any? %>

<div id="error_explanation">
  <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
  <ul>
    <% comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-5">
      <%= form.label :user_name %>
    </div>
    <div class="col-md-1">
      <%= form.text_field :user_name, id: :comment_user_name %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5">
      <%= form.label :body %>
    </div>
    <div class="col-md-1">
      <%= form.text_area :body, id: :comment_body, size: "22x3" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5">
      <%= form.label :rating %>
    </div>
    <div class="col-md-1">
      <%= form.number_field :rating, id: :comment_rating %>
    </div>
  </div>
  <%= form.hidden_field :idea_id %>
</div>
<br>
<div class="actions">
  <%= form.submit :Submit, class: 'btn btn-success'%>
</div>
<hr>
<% end %>
