<%= form_with(model: idea, local: true) do |form| %>
<% if idea.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>
  <ul>
    <% idea.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-1">
      <%= form.label :name %>
    </div>
    <div class="col-md-2">
      <%= form.text_field :name, id: :idea_name %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-1">
      <%= form.label :description %>
    </div>
    <div class="col-md-2">
      <%= form.text_area :description, id: :idea_description, size: "22x3" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-1">
      <%= form.label :picture %>
    </div>
    <div class="col-md-2">
      <%= form.file_field :picture, id: :idea_picture%>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= form.submit :Submit, class: 'btn btn-success'%>
  </div>
</div>
<% end %>
